<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@id/titleFragment">

    <fragment
            android:id="@+id/titleFragment"
            android:name="com.example.musicapp.screens.titleFragment.TitleFragment"
            tools:layout="@layout/fragment_title" >
        <action
                android:id="@+id/action_titleFragment_to_playerFragment"
                app:destination="@id/playerFragment" />
    </fragment>
    <fragment
            android:id="@+id/playerFragment"
            android:name="com.example.musicapp.screens.playerFragment.PlayerFragment"
            tools:layout="@layout/fragment_player" >
        <argument
                android:name="schedule"
                app:argType="com.example.musicapp.network.musicProfile.Schedule" />
    </fragment>
</navigation>